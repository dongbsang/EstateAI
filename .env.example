# ============================================
# PropLens 환경 설정
# ============================================

# 환경
ENV=development
LOG_LEVEL=INFO

# ============================================
# LLM 설정 (향후 사용)
# ============================================
MODEL_PATH=models/qwen2.5-7b-instruct.Q4_K_M.gguf
MODEL_N_CTX=4096
MODEL_N_GPU_LAYERS=0

# ============================================
# 공공데이터 API (국토부 실거래가)
# https://www.data.go.kr 에서 발급
# "국토교통부_아파트 전월세 실거래가" 활용 신청 필요
# ============================================
DATA_GO_KR_API_KEY=your_go_kr_api_key_here

# ============================================
# ODsay 대중교통 API (출퇴근 시간 계산)
# https://lab.odsay.com 에서 발급
# 무료: 1,000건/일
# ============================================
ODSAY_API_KEY=your_odsay_api_key_here

# ============================================
# 크롤링 설정
# ============================================
# 요청 간 딜레이 (초) - 차단 방지
CRAWL_DELAY_MIN=1.5
CRAWL_DELAY_MAX=3.0

# 지역당 최대 매물 수집 개수
MAX_ITEMS_PER_REGION=50
